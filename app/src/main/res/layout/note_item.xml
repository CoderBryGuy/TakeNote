<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              >


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="10dp">

    <TextView
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/name_note_item" android:textSize="24sp" android:textColor="@color/teal_700"/>
    <TextView
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/desc_note_item" android:textSize="18sp" android:textColor="@color/black"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>